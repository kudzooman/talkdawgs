<h1><%= markdown @comment.name %></h1>

<div class="row">
  <div class="col-md-8">
      <small>
        <%= image_tag(@comment.user.avatar.tiny.url) if @comment.user.avatar? %>
        submitted <%= time_ago_in_words(@comment.created_at) %> ago by
        <%= @comment.user.name %>
      </small>
    <p><%= markdown @comment.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@comment).edit? %>
      <%= link_to "Edit", edit_post_comment_path(@post, @comment), class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>